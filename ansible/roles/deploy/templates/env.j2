ALLOWED_HOSTS={{ domain }}
BASE_URL=https://{{ domain }}

{% if cdn_domain is defined %}
CDN_DOMAIN={{ cdn_domain }}
{% endif %}

DATABASE_URL=postgres://{{ dbuser }}:{{ dbpassword }}@{{ dbhost }}/{{ dbname }}

DEFAULT_FROM_EMAIL=Finding America Wagtail CMS <noreply@{{ domain }}>
EMAIL_HOST_USER={{ django_email_host_user }}
EMAIL_HOST_PASSWORD={{ django_email_host_password }}
EMAIL_HOST={{ django_email_host }}
EMAIL_PORT={{ django_email_port }}
EMAIL_USE_TLS={{ django_email_use_tls }}

{% if embedly_key is defined %}
EMBEDLY_KEY={{ embedly_key }}
{% endif %}

MEDIA_ROOT=/var/media/{{ domain }}
SECRET_KEY={{ django_secret_key }}

{% if aws_access_key is defined and aws_secret_key is defined and s3_backup_bucket_name is defined %}
DBBACKUP_AWS_ACCESS_KEY={{ aws_access_key }}
DBBACKUP_AWS_SECRET_KEY={{ aws_secret_key }}
DBBACKUP_S3_BUCKET_NAME={{ s3_backup_bucket_name }}
{% endif %}
